
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IndexPlugin</title>
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/jquery.decorate-1.0.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("div").decorate({
                fontSize: "20px",
                foreColor: "Red",
                backColor: "Yellow"
            });
        });
    </script>
</head>
<body>
    <div>
        This is the text to be decorated!
    </div>
</body>
</html>
